        <attr name="rightButtonText" format="reference|string"/>
        <!-- 右侧文本的Hint -->
        <attr name="rightHint" format="reference|string"/>
        <!-- 右侧文本的大小-->
        <attr name="rightTextSize" format="dimension"/>
        <!-- 右侧文本的颜色-->
        <attr name="rightTextColor" format="reference|color" />
