<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/left_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"/>

    <LinearLayout
        android:id="@+id/left_text_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <!-- 左侧文本容器 -->

    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|right" >

        <com.order.ui.component.LineShape
            android:id="@+id/right_line"
            android:layout_width="3dp"
            android:layout_height="fill_parent"
            custom:dashedSolidLength="3dp"
            custom:dashedSpaceLength="1dp"
            custom:lineColor="@color/l_gray"
            custom:lineWidth="2dp"
            custom:lineShapeOrientation="vertical"
            custom:type="dashed" />

        <TextView
            android:id="@+id/right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/right_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAlignBottom="false"
            android:src="@drawable/l_right_arrow" />

    </LinearLayout>

</LinearLayout>