<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle" >
            <solid android:color="@color/gray_d3d3d3" />
            <stroke android:width="1dp" android:color="@color/nav_bg"/>
            <corners android:radius="5dp" />
            <padding
                android:left="10dp"
                android:right="10dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle" >
            <solid android:color="@color/gray_d3d3d3" />
            <stroke android:width="1dp" android:color="@color/nav_bg"/>
            <corners android:radius="5dp" />
            <padding
                android:left="10dp"
                android:right="10dp" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle" >
            <solid android:color="@color/white" />
            <stroke android:width="1dp" android:color="@color/nav_bg"/>
            <corners android:radius="5dp" />
            <padding
                android:left="10dp"
                android:right="10dp" />
        </shape>
    </item>
</selector>
